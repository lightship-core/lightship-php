{
  "name": "lightship-core/lightship-php",
  "description": "Web page performance/seo/security/accessibility analysis, browser-less.",
  "type": "library",
  "license": "MIT",
  "version": "0.8.0",
  "autoload": {
    "psr-4": {
      "Lightship\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Khalyomede",
      "email": "khalyomede@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require-dev": {
    "phpstan/phpstan": "1.9.2",
    "pestphp/pest": "1.22.3",
    "friendsofphp/php-cs-fixer": "3.13.0",
    "thibautselingue/local-php-security-checker-installer": "1.0.3",
    "fakerphp/faker": "1.20.0"
  },
  "scripts": {
    "analyse": "phpstan analyse",
    "test": "pest --coverage",
    "lint": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer fix --diff --using-cache=no --allow-risky=yes --dry-run",
    "format": "PHP_CS_FIXER_IGNORE_ENV=1 php-cs-fixer --using-cache=no --allow-risky=yes fix",
    "install-security-checker": "local-php-security-checker-installer",
    "security-check": "local-php-security-checker",
    "update-check": "composer outdated --strict --direct"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "require": {
    "guzzlehttp/guzzle": "^7.5.0",
    "webmozart/assert": "1.*",
    "ext-curl": "*",
    "php": ">=8.1.0"
  }
}
